<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link rel="stylesheet" href="/styles/main.css">

</head>
<body>
    <div class="dashboard-container">
        <!-- Top Navigation Bar -->
        <div class="top-nav">
            <a class="imageasLink" href="/"><img src="/images/logo.png" alt="Sport Sphere Logo" class="logo" /></a>
            <span class="welcome">Welcome <%= user.fullname %>!</span>
            <a href="/admin/users" class="nav-title">User Management</a>
            <div class="nav-actions">
                <button class="nav-button" id="add-tournament-btn">
                    Add Tournament
                </button>
                <button class="nav-button" id="logout-btn">Log Out</button>
            </div>
        </div>

        <div class="main-content">
            <h1>User Management</h1>
            <table class="users-table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.username %></td>
                            <td><%= user.fullname %></td>
                            <td><%= user.email %></td>
                            <td>
                                <% if (user.role === 'admin') { %>
                                    <span class="admin-badge">Admin</span>
                                <% } else { %>
                                    User
                                <% } %>
                            </td>
                            <td>
                                <% if (user.role !== 'admin') { %>
                                    <button class="promote-btn" data-username="<%= user.username %>">
                                        Promote to Admin
                                    </button>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        document.querySelectorAll('.promote-btn').forEach(button => {
            button.addEventListener('click', async () => {
                const username = button.getAttribute('data-username');
                try {
                    const response = await fetch('/admin/promote', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ username })
                    });
                    
                    if (response.ok) {
                        alert('User promoted successfully!');
                        location.reload();
                    } else {
                        alert('Failed to promote user');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('An error occurred');
                }
            });
        });
    </script>
</body>
</html>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Tournaments</title>
    <link rel="stylesheet" href="/styles/main.css" />
</head>
<body>
    <div class="top-nav">
        <a class="imageasLink" href="/dashboard"><img src="/images/logo.png" alt="Sport Sphere Logo" class="logo" /></a>
        <span class="welcome">Welcome Haitham!</span>
        <a href="/tournaments" class="nav-title">Tournaments</a>
        <div class="nav-actions">
          <button class="nav-button" id="logout-btn">Log Out</button>
        </div>
      </div>
    <div class="homeBody">
        <div class="pageContainer">
            <h2>Current Tournaments</h2>

            <% tournaments.forEach(tournament => { %>
                <div class="tournamentContainer">
                    <a class="tournamentCard" href="/tournaments/<%= tournament.id %>">
                        <div class="teamIcon">
                            <img class="iconImage"
                                 src="https://cdn1.iconfinder.com/data/icons/science-and-education-2/44/trophy-512.png"
                                 alt="Trophy Icon">
                        </div>
                        <h3 class="tournamentTitle"><%= tournament.name %></h3>
                    </a>
                </div>
            <% }) %>

        </div>
    </div>
</body>
</html>
